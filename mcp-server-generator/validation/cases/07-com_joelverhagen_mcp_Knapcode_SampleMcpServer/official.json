{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-09-29/server.schema.json",
  "name": "com.joelverhagen.mcp/Knapcode.SampleMcpServer",
  "description": "A sample MCP server using the MCP C# SDK. Generates random numbers and random weather.",
  "repository": {
    "url": "https://github.com/joelverhagen/Knapcode.SampleMcpServer.git",
    "source": "github"
  },
  "version": "0.7.0-beta",
  "packages": [
    {
      "registryType": "nuget",
      "registryBaseUrl": "https://api.nuget.org",
      "identifier": "Knapcode.SampleMcpServer",
      "version": "0.7.0-beta",
      "transport": {
        "type": "stdio"
      },
      "packageArguments": [
        {
          "value": "mcp",
          "type": "positional",
          "valueHint": "mcp"
        },
        {
          "value": "start",
          "type": "positional",
          "valueHint": "start"
        }
      ],
      "environmentVariables": [
        {
          "value": "{weather_choices}",
          "variables": {
            "weather_choices": {
              "description": "Comma separated list of weather descriptions to randomly select.",
              "isRequired": true
            }
          },
          "name": "WEATHER_CHOICES"
        }
      ]
    }
  ]
}